
  <div class="body-welcome-sp">

<div class="pie-letter">
<h1>pie</h1>
</div>
<div class="main-welcome-sp">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
  <div class="field-welcome-sp">
    <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス"  %>
  </div>

  <div class="field-welcome-sp">
    <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード" %>
  </div>


  <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me, :class => "field-welcome-sp-check" %>
      <div class="field-welcome-sp-check-label">パスワードを記憶させますか？</div>
  <% end -%>

  <div class="reverse-top-button-sp">
  <%= link_to "戻る", root_path%>
  </div>

  <div class="actions-welcome-sp">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

  </div>
  </div>

